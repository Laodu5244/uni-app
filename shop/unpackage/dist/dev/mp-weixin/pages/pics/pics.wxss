page {
  height: 100%;
}
.pics {
  height: 100%;
  display: flex;
}
.pics .left {
  width: 200rpx;
  height: 100%;
}
.pics .left view {
  height: 60px;
  line-height: 60px;
  color: #333;
  text-align: center;
  border: 1px solid #eee;
  font-size: 32rpx;
}
.pics .left .active {
  background-color: #b50e03;
  color: #fff;
}
.pics .right {
  height: 100%;
  width: 550rpx;
  padding-right: 20px;
}
.pics .right .item {
  margin-top: 10px;
}
.pics .right .item image {
  width: 100%;
  margin: 10px;
}
.pics .right .item text {
  padding: 10px;
  color: #333;
  font-size: 28rpx;
  line-height: 60rpx;
  height: 300rpx;
}

