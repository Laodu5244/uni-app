.home swiper {
  width: 750rpx;
  height: 380rpx;
}
.home swiper image {
  height: 100%;
  width: 100%;
}
.nav {
  display: flex;
  margin-bottom: 10px;
}
.nav .nav-item {
  width: 25%;
  text-align: center;
}
.nav .nav-item view {
  width: 120rpx;
  height: 120rpx;
  background-color: #b50e03;
  border-radius: 60rpx;
  margin: 10px auto;
  line-height: 120rpx;
  color: #fff;
  font-size: 46rpx;
}
.nav .nav-item .icon-tupian {
  font-size: 40rpx;
}
.nav .nav-item text {
  font-size: 30rpx;
}
.goods {
  background-color: #eee;
  overflow: hidden;
}
.goods .title {
  height: 50px;
  line-height: 50px;
  color: #b50e03;
  text-align: center;
  letter-spacing: 16px;
  background-color: #fff;
  font-weight: bold;
  margin: 6px auto;
}

